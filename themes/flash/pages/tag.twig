{% extends "layouts" ~ DIR ~ "default.twig" %}

{% block content %}
{% if posts.paginated is defined and posts.paginated is not empty %}
<div class="ribbon">
<h3 class="ribbon">{{ "Posts tagged with &#8220;%s&#8221;" | translate | format(tag.name | fix) }}</h3>
</div>
{% for post in posts.paginated %}
{% include(["feathers" ~ DIR ~ post.feather ~ ".twig", "feathers" ~ DIR ~ "missing.twig"]) %}
{% endfor %}
{% elseif reason is defined %}
<div class="ribbon">
<h3 class="ribbon">{{ reason }}</h3>
</div>
{% endif %}
{% endblock %}
